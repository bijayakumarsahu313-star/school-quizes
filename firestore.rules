rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Rules are opened for demonstration purposes as there is no active auth.
    // In a production app, these would be secured.
    match /quizzes/{quizId} {
      allow read, write: if true;
    }

    match /submissions/{submissionId} {
        allow read, write: if true;
    }

    match /users/{userId} {
        allow read, write: if true;
    }

    // Fallback rule to block all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
