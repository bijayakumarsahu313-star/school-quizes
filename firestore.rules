
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Default deny all writes, allow public reads.
    match /{document=**} {
      allow read: if true;
      allow write: if false;
    }

    // Allow anyone to create, update, or delete quizzes.
    // This is needed because there is no user authentication.
    match /quizzes/{quizId} {
      allow write: if true;
    }
  }
}
