
{
  "entities": {
    "UserProfile": {
      "title": "User Profile",
      "description": "Represents a user's profile in the system.",
      "type": "object",
      "properties": {
        "uid": {
          "type": "string",
          "description": "The user's unique ID from Firebase Auth."
        },
        "email": {
          "type": "string",
          "format": "email",
          "description": "The user's email address."
        },
        "fullName": {
          "type": "string",
          "description": "The user's full name."
        },
        "role": {
          "type": "string",
          "enum": ["student", "teacher"],
          "description": "The user's role."
        },
        "school": {
          "type": "string",
          "description": "The name of the user's school."
        },
        "classLevel": {
          "type": "number",
          "description": "The class level of the student."
        },
        "board": {
          "type": "string",
          "description": "The educational board of the student."
        },
        "subject": {
          "type": "string",
          "description": "The subject taught by the teacher."
        }
      },
      "required": ["uid", "email", "fullName", "role", "school"]
    },
    "Quiz": {
      "title": "Quiz",
      "description": "Represents a quiz created by a teacher.",
      "type": "object",
      "properties": {
        "title": { "type": "string" },
        "subject": { "type": "string" },
        "classLevel": { "type": "number" },
        "difficulty": { "type": "string", "enum": ["easy", "medium", "hard"] },
        "questionType": { "type": "string" },
        "numberOfQuestions": { "type": "number" },
        "questions": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "text": { "type": "string" },
              "options": {
                "type": "array",
                "items": { "type": "string" }
              },
              "answer": { "type": "string" }
            },
            "required": ["text", "options", "answer"]
          }
        },
        "createdBy": {
          "type": "string",
          "description": "The UID of the teacher who created the quiz."
        },
        "createdAt": {
          "type": "string",
          "format": "date-time"
        },
        "status": {
          "type": "string",
          "enum": ["Draft", "Published"]
        },
        "duration": { "type": "number" }
      },
      "required": ["title", "subject", "classLevel", "difficulty", "questions", "createdBy", "createdAt", "status", "duration"]
    },
    "QuizResult": {
      "title": "Quiz Result",
      "description": "Represents a student's result for a specific quiz.",
      "type": "object",
      "properties": {
        "quizId": { "type": "string" },
        "userId": { "type": "string" },
        "studentName": { "type": "string" },
        "studentAvatar": { "type": "string" },
        "score": { "type": "number" },
        "completedAt": { "type": "string", "format": "date-time" },
        "answers": {
          "type": "object",
          "description": "A map of question index to the answer given by the student."
        }
      },
      "required": ["quizId", "userId", "studentName", "score", "completedAt"]
    }
  },
  "auth": {
    "providers": ["email", "google"]
  },
  "firestore": {
    "/users/{userId}": {
      "schema": { "$ref": "#/entities/UserProfile" },
      "description": "Stores public profile information for each user."
    },
    "/quizzes/{quizId}": {
      "schema": { "$ref": "#/entities/Quiz" },
      "description": "Stores all quizzes created by teachers."
    },
    "/quizzes/{quizId}/results/{resultId}": {
      "schema": { "$ref": "#/entities/QuizResult" },
      "description": "Stores the results for each student who took the quiz. The resultId is the student's UID."
    }
  }
}
