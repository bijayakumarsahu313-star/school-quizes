
{
  "entities": {
    "Quiz": {
      "title": "Quiz",
      "description": "Represents a quiz created by a teacher.",
      "type": "object",
      "properties": {
        "title": { "type": "string" },
        "school": { "type": "string" },
        "class": { "type": "string" },
        "questions": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "question": { "type": "string" },
              "options": {
                "type": "array",
                "items": { "type": "string" }
              },
              "answer": { "type": "string" }
            },
            "required": ["question", "options", "answer"]
          }
        },
        "createdAt": {
          "type": "string",
          "format": "date-time"
        }
      },
      "required": ["title", "questions", "school", "class", "createdAt"]
    }
  },
  "firestore": {
    "/quizzes/{quizId}": {
      "schema": { "$ref": "#/entities/Quiz" },
      "description": "Stores all quizzes created by teachers."
    }
  }
}
